{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Report",
      "command": "./build.ps1",
      "options": {
        "shell": { "executable": "pwsh.exe" },
        "cwd": "${workspaceFolder}/docs/report"
      },
      "type": "shell",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build Report (Full)",
      "command": "./build.ps1",
      "args": ["-Full"],
      "options": {
        "shell": { "executable": "pwsh.exe" },
        "cwd": "${workspaceFolder}/docs/report"
      },
      "type": "shell",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Build Tikz",
      "command": "pdflatex.exe -interaction=nonstopmode '${fileBasename}'; Remove-Item * -Include *.aux, *.log",
      "options": {
        "cwd": "${fileDirname}"
      },
      "type": "shell",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "group": "build"
    },
    {
      "label": "Word Count",
      "command": "texcount.exe",
      "args": ["-utf8", "-inc", "-brief", "-strict", "./Project Report.tex"],
      "options": {
        "cwd": "${workspaceFolder}/docs/report"
      },
      "type": "shell",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "NSwag",
      "command": "nswag run nswag.json /runtime:Net60",
      "options": {
        "cwd": "${workspaceFolder}/src"
      },
      "type": "shell",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      }
    }
  ]
}
